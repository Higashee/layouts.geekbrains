<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/memory_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/memory_screen_text_size"
        app:layout_constraintBottom_toTopOf="@id/main_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/tools_text_text_view" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_screen_text_size"
        app:layout_constraintBottom_toTopOf="@id/button7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/tools_text_text_view" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button7"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:radius="12dp"
        android:text="@string/key_7"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="@dimen/buttons_margin"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintStart_toStartOf="@+id/main_screen"
        app:layout_constraintTop_toBottomOf="@+id/main_screen" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button8"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_8"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="@dimen/buttons_margin"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@+id/main_screen" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button9"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_9"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="@dimen/buttons_margin"
        app:layout_constraintEnd_toStartOf="@id/buttonMultiply"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@+id/main_screen" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAC"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_clear"
        android:textSize="@dimen/button_text_size"
        android:layout_marginLeft="@dimen/buttons_margin"
        app:layout_constraintEnd_toEndOf="@id/main_screen"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@+id/main_screen"
        android:backgroundTint="@color/color_AC"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonC"
        android:layout_width="60dp"
        android:layout_height="@dimen/button_height"
        android:textSize="@dimen/button_text_size"
        app:icon="?attr/actionModeCloseDrawable"
        app:layout_constraintBottom_toTopOf="@+id/buttonAC"
        app:layout_constraintEnd_toEndOf="@id/main_screen"
        android:backgroundTint="@color/color_C"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_4"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="@dimen/buttons_margin"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintStart_toStartOf="@+id/main_screen"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button5"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_5"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button6"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_6"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toStartOf="@id/buttonMultiply"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMultiply"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_multiply"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toStartOf="@id/buttonDividee"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        android:backgroundTint="@color/color_actions"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDividee"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_dividee"
        android:textSize="@dimen/button_text_size"
        android:backgroundTint="@color/color_actions"
        app:layout_constraintEnd_toEndOf="@id/main_screen"
        app:layout_constraintStart_toEndOf="@id/buttonMultiply"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_1"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="@dimen/buttons_margin"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintStart_toStartOf="@+id/main_screen"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_2"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="@dimen/buttons_margin"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_3"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="@dimen/buttons_margin"
        app:layout_constraintEnd_toStartOf="@id/buttonPlus"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPlus"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_plus"
        android:textSize="@dimen/button_text_size"
        android:layout_marginRight="@dimen/buttons_margin"
        android:backgroundTint="@color/color_actions"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@id/buttonMinus"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMinus"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_minus"
        android:textSize="@dimen/button_text_size"
        android:backgroundTint="@color/color_actions"
        app:layout_constraintEnd_toEndOf="@id/main_screen"
        app:layout_constraintStart_toEndOf="@id/buttonPlus"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEqual"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_equal"
        android:textSize="@dimen/button_text_size"
        android:layout_marginLeft="@dimen/buttons_margin"
        android:backgroundTint="@color/color_equal"
        app:layout_constraintEnd_toEndOf="@id/main_screen"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/key_0"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@id/main_screen"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/change_theme"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="@string/theme_mode"
        android:textSize="@dimen/switch_compat_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEqual"
        app:layout_constraintVertical_bias="0.112" />


</androidx.constraintlayout.widget.ConstraintLayout>